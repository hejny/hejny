{
    "autokill": true,
    "@see": "https://marketplace.visualstudio.com/items?itemName=fabiospampinato.vscode-terminals",
    "terminals": [
        {
            "name": "🧪 Test",
            "command": "npm run test",
            "onlySingle": true
        },
        {
            "name": "🧪 Lint",
            "command": "npm run lint",
            "onlySingle": true
        },
        {
            "name": "🩹 Lint fix",
            "command": "npm run lint -- --fix",
            "onlySingle": true
        },
        {
            "name": "🏭 Generate projects",
            "command": "ts-node ./scripts/generate-projects/generate-projects.ts",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼👑 Release major version",
            "command": "npm version major",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🚀 Release minor version",
            "command": "npm version minor",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🩹 Release patch version",
            "command": "npm version patch",
            "onlySingle": true,
            "focus": true
        }
    ]
}
